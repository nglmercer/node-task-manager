{
  "name": "node-task-manager",
  "version": "2.1.5",
  "description": "Un gestor de tareas as√≠ncrono y basado en eventos para Node.js que maneja descargas, backups y restauraciones.",
  "author": "nglmercer@gmail.com",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nglmercer/node-task-manager.git"
  },
  "keywords": [
    "task",
    "manager",
    "async",
    "events",
    "download",
    "backup",
    "compression",
    "adapter",
    "node"
  ],
  "homepage": "https://github.com/nglmercer/node-task-manager#readme",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/index.js",
      "types": "./dist/adapters/index.d.ts"
    }
  },
  "dependencies": {
    "fflate": "^0.8.2",
    "tar": "^6.2.0"
  },
  "peerDependencies": {
    "fflate": "^0.8.2",
    "tar": "^6.2.0"
  },
  "peerDependenciesMeta": {
    "fflate": {
      "optional": true
    },
    "tar": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "@types/node": "^20.11.17",
    "@types/tar": "^6.1.13",
    "rimraf": "^5.0.10",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
